---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navigation/Navbar.astro';
import AboutPlatform from '../components/faq/AboutPlatform.astro';
import FaqNavigation from '../components/faq/FaqNavigation.astro';
import FaqSection from '../components/faq/FaqSection.astro';
import { faqCategories } from '../components/faq/FaqData';
---

<Layout title="الأسئلة الشائعة - تعلم اللغة الألمانية">
  <Navbar />
  <main class="faq-page">
    <div class="hero">
      <h1>الأسئلة الشائعة</h1>
      <p class="page-desc">إجابات على أكثر الأسئلة شيوعاً حول منصتنا وخدماتنا</p>
    </div>
    
    <AboutPlatform />
    <FaqNavigation />
    
    <div class="container">
      {faqCategories.map(category => (
        <FaqSection {...category} />
      ))}
    </div>
  </main>
</Layout>

<style>
.faq-page {
  background: var(--bg-light);
  min-height: 100vh;
}

.hero {
  background: var(--white);
  padding: 8rem 2rem 4rem;
  text-align: center;
  margin-bottom: 2rem;
}

h1 {
  color: var(--text-primary);
  font-size: clamp(2rem, 5vw, 2.5rem);
  margin-bottom: 1rem;
}

.page-desc {
  color: var(--text-secondary);
  margin-bottom: 1rem;
  font-size: clamp(1rem, 2.5vw, 1.2rem);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

@media (max-width: 768px) {
  .hero {
    padding: 6rem 1rem 3rem;
  }
  
  .container {
    padding: 1rem;
  }
}
</style>