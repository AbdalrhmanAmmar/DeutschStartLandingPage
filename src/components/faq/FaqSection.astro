---
import FaqItem from './FaqItem.astro';

interface Props {
  title: string;
  questions: Array<{
    question: string;
    answer: string;
  }>;
}

const { title, questions } = Astro.props;
---
<section class="faq-section" id={title.replace(/\s+/g, '-')}>
  <h2>{title}</h2>
  <div class="questions-list">
    {questions.map(item => (
      <FaqItem {...item} />
    ))}
  </div>
</section>

<style>
.faq-section {
  margin-bottom: 3rem;
  scroll-margin-top: 150px;
}

h2 {
  color: var(--primary);
  font-size: clamp(1.5rem, 4vw, 1.75rem);
  margin-bottom: 1.5rem;
}

.questions-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
</style>