---
interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
}

// القيم الافتراضية
const defaultTitle = "تعلم الألمانية بمنهجية - دليل deutschstart الشامل";
const defaultDescription = "المرجع الشامل لتعلم الألمانية ذاتياً - خارطة طريق مدروسة تأخذك من الصفر إلى الإتقان";
const defaultCanonical = "https://www.deutschstart.com";
const defaultOgImage = "https://www.deutschstart.com/images/ogImg.jpeg";
const defaultOgType = "website";

// دمج الخصائص مع القيم الافتراضية
const {
  title = defaultTitle,
  description = defaultDescription,
  canonical = defaultCanonical,
  ogImage = defaultOgImage,
  ogType = defaultOgType
} = Astro.props;
---

<!doctype html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="بداية تعلم الألمانية، تعليم ألماني ذاتي، منهج deutschstart، خطة دراسة ألمانية، تعلم الألمانية للمبتدئين العرب، مصادر مجانية لألمانية" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="author" content="فريق deutschstart | بداية الألمانية" />
    <meta name="brand" content="deutschstart" />
    <meta name="application-name" content="بداية الألمانية" />
    <meta name="google-site-verification" content="fT4o3RtWmiGf0Rc5RGXgcd5NIvO6sGThG2idP091QK4" />

    <!-- Open Graph / Facebook -->
    <meta property="og:site_name" content="deutschstart | بداية الألمانية" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />
    <meta http-equiv="Content-Language" content="ar" />
    <meta property="og:locale" content="ar_AR" />
    
    <link rel="canonical" href={canonical} />
    <title>{title}</title>
  </head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		/* ألوان مستوحاة من العلم الألماني وتناسب التعليم */
		--primary: #DE0000;        /* أحمر للعناصر الرئيسية */
		--secondary: #FFD700;      /* ذهبي للتأكيد */
		--accent: #000000;         /* أسود للتباين */
		--text-primary: #333333;
		--text-secondary: #666666;
		--bg-light: #F8F9FA;
		--bg-warm: #FFF9E6;
		--white: #FFFFFF;
	}
	
	html {
		font-family: 'Tajawal', system-ui, sans-serif;
		background: var(--bg-light);
		color: var(--text-primary);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Cairo', sans-serif;
		font-weight: 700;
	}

	body {
		margin: 0;
		padding: 0;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.btn {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 0.5rem;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.3s ease;
		cursor: pointer;
	}

	.btn-primary {
		background-color: var(--primary);
		color: var(--white);
	}

	.btn-primary:hover {
		background-color: #B80000;
	}

	.btn-secondary {
		background-color: var(--secondary);
		color: var(--accent);
	}

	.btn-secondary:hover {
		background-color: #FFE44D;
	}
</style>