	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ar" dir="rtl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="المرجع الشامل لتعلم الألمانية ذاتياً - خارطة طريق مدروسة تأخذك من الصفر إلى الإتقان خطوة بخطوة، شروح مبسطة، مصادر مجانية مرفقة بخطة دراسة واضحة، ونصائح عملية من متحدثين أصليين. تعلّم في أي وقت ومن أي مكان دون الحاجة إلى معلم!" />
				<meta name="viewport" content="width=device-width" />
				<meta name="keywords" content="بداية تعلم الألمانية، تعليم ألماني ذاتي، منهج deutschstart، خطة دراسة ألمانية، تعلم الألمانية للمبتدئين العرب، مصادر مجانية لألمانية" />		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
				<meta name="author" content="فريق deutschstart | بداية الألمانية" />
				<meta name="brand" content="deutschstart" />
<meta name="application-name" content="بداية الألمانية" />

<!-- og Tag -->
<meta property="og:site_name" content="deutschstart | بداية الألمانية" />
<meta property="og:description" content="تعلم الألمانية بسهولة مع deutschstart - منصة عربية تقدم خارطة طريق منهجية، شروح مبسطة، وتمارين تفاعلية لإتقان اللغة من الصفر إلى الاحتراف" />
